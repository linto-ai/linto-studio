# Dev env
DEBUG=/none
DEV_DISABLE_AUTH=false
LINTO_STACK_IMAGE_TAG=latest-unstable
LOGGER_ENABLED=false

# Components loading in this order
COMPONENTS=WebServer
WEBSERVER_HTTP_PORT=8001
SESSION_SECRET=mysecret
USE_SSL=false

# Mongo
DB_DRIVER=mongo
DB_HOST=localhost
DB_PORT=27017
DB_REQUIRE_LOGIN=true
DB_USER=root
DB_PASS=example
DB_NAME=conversations

# STT Config
STT_SERVICES=french-service-name;fr-FR;endpoint|english-service-name;en-US;endpoint
STT_REQUIRE_AUTH=false
STT_USER=stt_auth
STT_PASSWORD=stt_password
STT_RESULT_CONVERT_NUMBERS=true
STT_RESULT_RETURN_RAW=false

# Cross domain accessibility
CORS_ENABLED=false
CORS_API_WHITELIST=

# Express settings
EXPRESS_SIZE_FILE_MAX=500mb
EXPRESS_TIMEOUT=1000000

# Storage folder of audio volume
VOLUME_AUDIO_UPLOAD_PATH=storages/audios
VOLUME_AUDIO_PUBLIC_PATH=audios
VOLUME_PROFILE_PICTURE_UPLOAD_PATH=storages/pictures
VOLUME_PROFILE_PICTURE_PUBLIC_PATH=pictures

VOLUME_DATABASE_FOLDER=storages/database

# JWT SECRET
CM_JWT_SECRET=jwt_secret
CM_REFRESH_SECRET=jwt_refresh_secret

# Docker config
CONVERSATION_MANAGER_HOST=localhost


