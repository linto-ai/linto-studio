{
  "/api/conversations/{conversationId}/categories": {
    "post": {
      "tags": [
        "conversations taxonomy"
      ],
      "summary": "Create a category in an organization",
      "parameters": [{
          "name": "conversationId",
          "in": "path",
          "description": "Conversation ID",
          "required": true,
          "type": "string"
        },
        {
          "in": "query",
          "name": "name",
          "required": false,
          "description": "Filter by tag name",
          "example": "tag name"
        }
      ],
      "requestBody": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "color": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "keyword",
                    "conversation_metadata",
                    "conversation_text",
                    "commentary"
                  ]
                }
              },
              "required": [
                "name",
                "type"
              ]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Category created"
                }
              },
              "example": {
                "message": "Category created"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "409": {
          "$ref": "#/components/responses/Conflict"
        },
        "415": {
          "$ref": "#/components/responses/UnsupportedMediaType"
        }
      }
    },
    "get": {
      "tags": [
        "conversations taxonomy"
      ],
      "summary": "Retrieve all categories from an conversation organization",
      "parameters": [{
          "name": "organizationId",
          "in": "path",
          "description": "Organization ID",
          "required": true,
          "type": "string"
        },
        {
          "in": "query",
          "name": "type",
          "required": false,
          "schema": {
            "$ref": "#/components/schemas/CategoryType"
          }
        },
        {
          "in": "query",
          "name": "expand",
          "required": false,
          "description": "Expand the result with their linked tags"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "$ref": "#/components/schemas/Category"
                }
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/categories/{categoryId}": {
    "get": {
      "tags": [
        "conversations taxonomy"
      ],
      "summary": "Retrieve a categories from an conversation organization",
      "parameters": [{
        "name": "conversationId",
        "in": "path",
        "description": "Conversation ID",
        "required": true,
        "type": "string"
      }, {
        "name": "categoryId",
        "in": "path",
        "description": "categoryId ID",
        "required": true,
        "type": "string"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Category"
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/categories/search": {
    "get": {
      "tags": [
        "conversations taxonomy"
      ],
      "summary": "Search categories based on the specified research type",
      "parameters": [{
          "name": "conversationId",
          "in": "path",
          "description": "Conversation ID",
          "required": true,
          "type": "string"
        },
        {
          "in": "query",
          "name": "type",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/CategorySearchType"
          },
          "description": "Research type:\n * `explore` - Disabled for a conversation search \n * `info` - Retrieve information for all desired tags with their category information (`tags`, `name`) \n * `category` - Search for any category based on the provided name (`name`)\n * `notags` - List categories without any tags \n"
        },
        {
          "in": "query",
          "name": "tags",
          "required": false,
          "description": "List of tags id to search for",
          "example": "5e9b1b9b0f9b2c0017b5f1b5,5e9b1b9b0f9b2c0017b5f1b6,..."
        },
        {
          "in": "query",
          "name": "categories",
          "required": false,
          "description": "List of categories id to search for",
          "example": "5e9b1b9b0f9b2c0017b5f1b5,5e9b1b9b0f9b2c0017b5f1b6,..."
        },
        {
          "in": "query",
          "name": "name",
          "required": false,
          "description": "Search for a name on tags or categories based on the search type"
        },
        {
          "in": "query",
          "name": "expand",
          "required": false,
          "description": "Expand the result with their linked tags (only use for `explore` type)"
        },
        {
          "in": "query",
          "name": "categoryType",
          "required": false,
          "description": "CategoryType to search, this have the priority over the tags and categories parameters",
          "example": "highlight,conversation_metadata,conversation_text,commentary"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "$ref": "#/components/schemas/CategoryWithTags"
                }
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "403": {
          "$ref": "#/components/responses/Forbidden"
        }
      }
    }
  }
}