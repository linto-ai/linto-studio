{
  "/api/conversations/{conversationId}/tags": {
    "get": {
      "tags": [
        "conversations taxonomy"
      ],
      "summary": "List all tags from the conversation organization",
      "parameters": [{
        "name": "organizationId",
        "in": "path",
        "description": "Organization ID",
        "required": true,
        "type": "string"
      }],
      "requestBody": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "categoryId": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "categoryId"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Tag"
              },
              "example": [{
                "id": "63f4d9ed7d1b424dccabc375",
                "name": "Tag name",
                "categoryId": "640612ea3b471d4e48cc9bf3",
                "organizationId": "5f4d9ed7d1b424dccabc372"
              }]
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/tags/{tagId}": {
    "get": {
      "tags": [
        "conversations taxonomy"
      ],
      "summary": "Retrieve tag information",
      "parameters": [{
        "name": "conversationId",
        "in": "path",
        "description": "Conversation ID",
        "required": true,
        "type": "string"
      }, {
        "name": "tagId",
        "in": "path",
        "description": "Tag ID",
        "required": true,
        "type": "string"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Tag"
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  }
}