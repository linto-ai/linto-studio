{
  "/api/organizations/{organizationId}/": {
    "get": {
      "tags": [
        "organizations members"
      ],
      "summary": "Retrieve organization information",
      "parameters": [{
        "in": "path",
        "name": "organizationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an user"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/organization"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/organizations/{organizationId}/self": {
    "delete": {
      "tags": [
        "organizations members"
      ],
      "summary": "Leave the requested organization",
      "parameters": [{
        "in": "path",
        "name": "organizationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an organization"
      }],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "description": "Information"
                }
              },
              "example": {
                "message": "You have leaved the organization"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "403": {
          "$ref": "#/components/responses/Forbidden"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/organizations/{organizationId}/conversations": {
    "get": {
      "tags": [
        "organizations members"
      ],
      "summary": "Lists all conversations from an organization where the user have an access",
      "parameters": [{
        "in": "path",
        "name": "organizationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an organization"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "$ref": "#/components/schemas/ConversationList"
                }
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/organizations/{organizationId}/conversations/searchByTag": {
    "post":{
      "tags": [
        "organizations members"
      ],
      "summary": "Search a conversation related to multiple tag",
      "parameters": [{
        "name": "organizationId",
        "in": "path",
        "description": "Organization ID",
        "required": true,
        "type": "string"
      }],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "tags": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "tags"
              ]
            }
          }
        }
      },
      "responses":{
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Conversation"
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  }

}