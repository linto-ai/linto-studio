{
  "/api/organizations/{organizationId}/": {
    "get": {
      "tags": [
        "organizations members"
      ],
      "summary": "Retrieve organization information",
      "parameters": [{
        "in": "path",
        "name": "organizationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an user"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/organization"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/organizations/{organizationId}/self": {
    "delete": {
      "tags": [
        "organizations members"
      ],
      "summary": "Leave the requested organization",
      "parameters": [{
        "in": "path",
        "name": "organizationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an organization"
      }],
      "responses": {
        "200": {
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "description": "Information"
                }
              },
              "example": {
                "message": "You have leaved the organization"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "403": {
          "$ref": "#/components/responses/Forbidden"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/organizations/{organizationId}/conversations": {
    "get": {
      "tags": [
        "organizations members"
      ],
      "summary": "Lists all conversations from an organization where the user have an access",
      "parameters": [{
        "in": "path",
        "name": "organizationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an organization"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "$ref": "#/components/schemas/ConversationList"
                }
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/organizations/{organizationId}/conversations/search": {
    "get": {
      "tags": [
        "organizations members"
      ],
      "summary": "Search for conversations ",
      "parameters": [{
          "name": "organizationId",
          "in": "path",
          "description": "Organization ID",
          "required": true,
          "type": "string"
        },
        {
          "in": "query",
          "name": "tags",
          "required": false,
          "description": "List of tags id to search for",
          "example": "5e9b1b9b0f9b2c0017b5f1b5,5e9b1b9b0f9b2c0017b5f1b6,..."
        }, {
          "in": "query",
          "name": "name",
          "required": false,
          "description": "Search for a conversation name"
        },
        {
          "in": "query",
          "name": "text",
          "required": false,
          "description": "Search for a text inside the conversation"
        }
      ],

      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Conversation"
              }
            }
          }
        },
        "204": {
          "$ref": "#/components/responses/NoContent"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  }
}