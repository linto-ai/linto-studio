{
  "/auth/login": {
    "post": {
      "tags": [
        "auth"
      ],
      "summary": "Authenticate user with email, password and return the user JWT token",
      "requestBody": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "$ref": "#/components/responses/Authenticate"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "500": {
          "$ref": "#/components/responses/InternalServer"
        }
      }
    }
  },
  "/auth/login/magic-link": {
    "post": {
      "tags": [
        "auth"
      ],
      "summary": "Allow to login with a magic link",
      "requestBody": {
        "content": {
          "multipart/form-data": {
            "schema": {
              "type": "object",
              "properties": {
                "resetId": {
                  "type": "string"
                },
                "psw": {
                  "type": "string"
                }
              },
              "required": [
                "resetId",
                "psw"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "$ref": "#/components/responses/Authenticate"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "500": {
          "$ref": "#/components/responses/InternalServer"
        }
      }
    }
  },
  "/auth/logout": {
    "get": {
      "tags": [
        "auth"
      ],
      "summary": "Logout user",
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "User has been disconnected"
                  }
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "500": {
          "$ref": "#/components/responses/InternalServer"
        }
      }
    }
  },
  "/auth/isAuth": {
    "get": {
      "tags": [
        "auth"
      ],
      "summary": "Verify if user token is still",
      "responses": {
        "200": {
          "description": "Ok",
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "example": "Ok"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "500": {
          "$ref": "#/components/responses/InternalServer"
        }
      }
    }
  }
}