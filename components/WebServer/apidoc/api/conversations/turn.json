{
  "/api/conversations/{conversationId}/turns/{turnId}": {
    "post": {
      "tags": ["conversation turn"],
      "summary": "Add a conversation turn after the indicated turnId",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "turnId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for a turn"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Turn"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Message indicating the result of the operation"
                }
              },
              "example": {
                "message": "Conversation turn has been added"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    },
    "patch": {
      "tags": ["conversation turn"],
      "summary": "Update a conversation turn",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "turnId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for a turn"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Turn"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Message indicating the result of the operation"
                }
              },
              "example": {
                "message": "Conversation turn has been updated"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    },
    "delete": {
      "tags": ["conversation turn"],
      "summary": "Delete a conversation turn",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "turnId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for a turn"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Message indicating the result of the operation"
                }
              },
              "example": {
                "message": "Conversation turn has been deleted"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/turns/{turnId}/merge/{direction}": {
    "patch": {
      "tags": ["conversation turn"],
      "summary": "Merge the indicated turn with the next or previous turn",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "turnId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for a turn"
        },
        {
          "in": "path",
          "name": "direction",
          "type": "string",
          "enum": [
            "next",
            "previous"
          ],
          "required": true,
          "description": "Direction to merge the turn with the next or previous turn (value is either 'next' or 'previous')"
        }
      ],
      "responses": {
        "200": {
          "description": "The list of services",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Turn"
              }
            }
          }
        },
        "304":{
          "$ref":"#/components/responses/NotModified"
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  }
}