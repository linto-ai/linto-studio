{
  "/api/conversations/subtitle/{conversationId}/generate": {
    "get": {
      "tags": [
        "conversations member"
      ],
      "summary": "Generate subtitle for a conversation",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "segmentCharSize",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define a subtitle segment size by character length"
        },
        {
          "in": "path",
          "name": "numberOfLines",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define the number of line of each subtitle, default : 1 "
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/ConversationSubtitle"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
