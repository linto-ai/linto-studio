{
  "/api/conversations/{conversationId}/subtitle": {
    "get": {
      "tags": [
        "conversations member"
      ],
      "summary": "Generate subtitle for a conversation",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "segmentCharSize",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define a subtitle segment size by character length"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Subtitle "
                }
              },
              "example": {
                "segmentCharSize": 80,
                "subtitle": [{
                  "text": "Quand il ...",
                  "stime": 3.66,
                  "etime": 6.21,
                  "turn_id": "a71b1f01-442e-44cf-926b-98a85e85628e"
                }]
              }

            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/subtitle?type=srt": {
    "get": {
      "tags": [
        "conversations member"
      ],
      "summary": "Generate srt format for a conversation",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "segmentCharSize",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define a subtitle segment size by character length"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "example": "1\n00:15:47,850 --> 00:15:53,730\nDe par le volume\n\n2\n00:15:53,730 --> 00:15:56,520\nle fait ..."
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  }
}