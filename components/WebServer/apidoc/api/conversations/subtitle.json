{
  "/api/conversations/{conversationId}/subtitle/generate": {
    "get": {
      "tags": [
        "conversations member"
      ],
      "summary": "Generate subtitle for a conversation",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "segmentCharSize",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define a subtitle segment size by character length"
        },
        {
          "in": "path",
          "name": "numberOfLines",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define the number of line of each subtitle, default : 1 "
        },
        {
          "in": "path",
          "name": "version",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Name of the version"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/ConversationSubtitle"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/subtitle/versions": {
    "get": {
      "tags": [
        "conversations member"
      ],
      "summary": "Generate subtitle for a conversation",
      "parameters": [{
        "in": "path",
        "name": "conversationId",
        "type": "string",
        "format": "uuid",
        "required": true,
        "description": "uuid string identifier for an conversation"
      }],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "$ref": "#/components/schemas/ConvSubtitleVersion"
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/conversations/{conversationId}/subtitle/generate?type=srt": {
    "get": {
      "tags": [
        "conversations member"
      ],
      "summary": "Generate srt format for a conversation",
      "parameters": [{
          "in": "path",
          "name": "conversationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an conversation"
        },
        {
          "in": "path",
          "name": "segmentCharSize",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define a subtitle segment size by character length"
        },
        {
          "in": "path",
          "name": "numberOfLines",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Allow to define the number of line of each subtitle, default : 1 "
        },
        {
          "in": "path",
          "name": "version",
          "type": "integer",
          "format": "uuid",
          "required": false,
          "description": "Name of the version"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "example": "1\n00:15:47,850 --> 00:15:53,730\nDe par le volume\n\n2\n00:15:53,730 --> 00:15:56,520\nle fait ..."
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },

