{
  "SessionRequest": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "startTime": {
        "type": "string",
        "format": "date-time"
      },
      "endTime": {
        "type": "string",
        "format": "date-time"
      },
      "owner": {
        "type": "string"
      },
      "organizationId": {
        "type": "string"
      },
      "public": {
        "type": "boolean"
      },
      "channels": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/ChannelRequest"
        }
      }
    }
  },
  "SessionPaginationAnswer": {
    "type": "object",
    "properties": {
      "sessions": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/SessionAnswer"
        }
      },
      "totalItems": {
        "type": "integer",
        "description": "Total number of sessions matching the filters"
      }
    }
  },
  "SessionAnswerBase": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "status": {
        "type": "string",
        "enum": ["pending_creation", "ready", "active", "errored", "terminated"]
      },
      "name": {
        "type": "string"
      },
      "startTime": {
        "type": "string",
        "format": "date-time"
      },
      "endTime": {
        "type": "string",
        "format": "date-time"
      },
      "erroredOn": {
        "type": "string",
        "format": "date-time"
      }
    }
  },
  "SessionAnswer": {
    "allOf": [
      { "$ref": "#/components/schemas/SessionAnswerBase" },
      {
        "type": "object",
        "properties": {
          "channels": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ChannelAnswer"
            }
          }
        }
      }
    ]
  },
  "SessionAnswerWithCaptions": {
    "allOf": [
      { "$ref": "#/components/schemas/SessionAnswerBase" },
      {
        "type": "object",
        "properties": {
          "channels": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ChannelAnswerWithCaptions"
            }
          }
        }
      }
    ]
  },
  "ChannelRequest": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the channel"
      },
      "transcriberProfileId": {
        "type": "integer",
        "description": "The id of the channel config"
      },
      "translations": {
        "type": "array",
        "description": "List of bcp47 strings.",
        "items": {
          "type": "string"
        }
      },
      "keepAudio": {
        "type": "boolean",
        "description": "Save audio"
      },
      "diarization": {
        "type": "boolean",
        "description": "Enable diarization"
      }
    }
  },
  "ChannelAnswer": {
    "type": "object",
    "properties": {
      "keepAudio": {
        "type": "boolean",
        "description": "The audio is saved"
      },
      "diarization": {
        "type": "boolean",
        "description": "The diarization is enabled"
      },
      "index": {
        "type": "integer",
        "description": "The index of the channel"
      },
      "transcriberId": {
        "type": "string",
        "description": "The id of the transcriber that is currently transcribing this channel"
      },
      "name": {
        "type": "string",
        "description": "The name of the channel"
      },
      "languages": {
        "type": "array",
        "description": "The language of the channel as a BCP-47 language tag (fr-FR, en-US, ...) and endpoints"
      },
      "translations": {
        "type": "array",
        "description": "The translations enabled for the channel as a BCP-47 language tag"
      },
      "transcriberProfileId": {
        "type": "integer",
        "description": "The id of the channel config"
      },
      "streamEndpoints": {
        "type": "object",
        "description": "The available stream endpoints for this channel",
        "properties": {
          "srt": {
            "type": "string",
            "description": "The stream endpoint for SRT stream"
          },
          "rtmp": {
            "type": "string",
            "description": "The stream endpoint for RTMP stream"
          },
          "ws": {
            "type": "string",
            "description": "The stream endpoint for WEBSOCKET stream"
          }
        }
      },
      "streamStatus": {
        "type": "string",
        "description": "The status of the stream",
        "enum": ["active", "inactive", "errored"]
      },
      "audioFile": {
        "type": "string",
        "description": "URL to the audio file"
      }
    }
  },
  "ChannelAnswerWithCaptions": {
    "allOf": [
      { "$ref": "#/components/schemas/ChannelAnswer" },
      {
        "type": "object",
        "properties": {
          "closedCaptions": {
            "type": "array",
            "items": {
              "type": "object",
              "example": {
                "astart": "date-time",
                "start": 0.0,
                "end": 3.12,
                "text": "string"
              }
            }
          }
        }
      }
    ]
  }
}
