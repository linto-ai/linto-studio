{
  "/api/administration/bots": {
    "get": {
      "tags": ["administration sessions bots"],
      "summary": "Get all bots",
      "parameters": [
        {
          "in": "query",
          "name": "limit",
          "description": "Maximum number of bots in the answer",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "query",
          "name": "offset",
          "description": "Offset from the start the number of bots",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "query",
          "name": "channelId",
          "description": "Return only the bot for this channelId",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "path",
          "name": "organizationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an organization"
        }
      ],
      "responses": {
        "200": {
          "description": "The list of bots",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/BotAnswer"
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["administration sessions bots"],
      "summary": "Create a new bot",
      "parameters": [
        {
          "in": "path",
          "name": "organizationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an organization"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/BotRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BotAnswer"
              }
            }
          }
        }
      }
    }
  },
  "/api/administration/bots/{id}": {
    "get": {
      "tags": ["administration sessions bots"],
      "summary": "Get a bot by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Bot ID",
          "required": true,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "path",
          "name": "organizationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an organization"
        }
      ],
      "responses": {
        "200": {
          "description": "The bot",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BotAnswer"
              }
            }
          }
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    },
    "delete": {
      "tags": ["administration sessions bots"],
      "summary": "Delete a bot by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Bot ID",
          "required": true,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "path",
          "name": "organizationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an organization"
        }
      ],
      "responses": {
        "200": {
          "description": "Bot successfully deleted"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  }
}
