{
  "/api/administration/organizations": {
    "get": {
      "tags": ["administration"],
      "summary": "List all organizations of the platform",
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userOrganizations": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "$ref": "#/components/schemas/OrganizationUsers"
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    },
    "post": {
      "tags": ["administration"],
      "summary": "Create an organization",
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Name of the organization"
                },
                "permissions": {
                  "type": "integer"
                }
              },
              "required": ["name"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Organization xxxxxx created"
                },
                "organizationId": {
                  "type": "string",
                  "description": "Organization id"
                }
              },
              "example": {
                "message": "Organization test-norg-user created",
                "organizationId": "639312d5b36cdb549eb1deab"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "409": {
          "$ref": "#/components/responses/Conflict"
        },
        "415": {
          "$ref": "#/components/responses/UnsupportedMediaType"
        }
      }
    }
  },
  "/api/administration/organizations/{organizationId}/": {
    "patch": {
      "tags": ["administration"],
      "summary": "Update the organization information",
      "parameters": [
        {
          "in": "path",
          "name": "organizationId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for an organization"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "token": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "permissions": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Message"
                }
              },
              "example": {
                "message": "Organization has been updated"
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  }
}
