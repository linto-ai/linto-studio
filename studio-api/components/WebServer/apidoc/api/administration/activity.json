{
  "/api/administration/activity": {
    "get": {
      "tags": ["administration activity"],
      "summary": "List all activity of the platform",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "count": {
                    "type": "integer",
                    "description": "Total number of activity log entries returned",
                    "default": "1"
                  },
                  "list": {
                    "type": "array",
                    "description": "Array of activity log entries",
                    "items": {
                      "$ref": "#/components/schemas/ActivityLog"
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  },
  "/api/administration/activity/compute": {
    "get": {
      "tags": ["administration activity"],
      "summary": "Get kpi details for a specific activity from an organization",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "in": "query",
          "name": "organizationId",
          "type": "string",
          "format": "uuid",
          "required": false,
          "description": "uuid string identifier for an organization"
        },
        {
          "in": "query",
          "name": "startDate",
          "schema": {
            "type": "string",
            "format": "date-time",
            "example": "2025-11-19T00:00:00.000Z"
          },
          "required": false,
          "description": "Start date timestamp to filter activity logs from a specific date"
        },
        {
          "in": "query",
          "name": "endDate",
          "schema": {
            "type": "string",
            "format": "date-time",
            "example": "2025-11-25T00:00:00.000Z"
          },
          "required": false,
          "description": "End date timestamp to filter activity logs from a specific date"
        },
        {
          "in": "query",
          "name": "ressource",
          "schema": {
            "type": "string",
            "enum": ["llm", "transcription", "session"]
          },
          "required": false,
          "description": "Scope of the user, must be 'backoffice'"
        }
      ],
      "responses": {
        "200": {
          "description": "The list of sessions",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OrganizationKPI"
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  },
  "/api/administration/activity/session": {
    "post": {
      "tags": ["administration activity"],
      "summary": "Generate kpi for all sessions with activity",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "KPI generated successfully"
                  }
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    },
    "get": {
      "tags": ["administration activity"],
      "summary": "Get activity details for all sessions",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        }
      ],
      "responses": {
        "200": {
          "description": "The list of sessions",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SessionKPI"
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  },
  "/api/administration/activity/session/{sessionId}": {
    "get": {
      "tags": ["administration activity"],
      "summary": "Get activity details for a specific session",
      "parameters": [
        {
          "in": "path",
          "name": "sessionId",
          "type": "string",
          "format": "uuid",
          "required": true,
          "description": "uuid string identifier for the session"
        },
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        }
      ],
      "responses": {
        "200": {
          "description": "The list of sessions",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SessionKPI"
                }
              }
            }
          }
        },
        "401": {
          "$ref": "#/components/responses/Unauthorized"
        }
      }
    }
  }
}
