{
  "/api/administration/sessions/purge": {
    "post": {
      "tags": ["administration sessions"],
      "summary": "Purge terminated sessions or all sessions if force is true",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "in": "query",
          "name": "force",
          "description": "Force deletion of all sessions",
          "required": false,
          "schema": {
            "type": "boolean"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Sessions purged successfully"
        }
      }
    }
  },
  "/api/administration/sessions": {
    "get": {
      "tags": ["administration sessions"],
      "summary": "Get all sessions",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "in": "query",
          "name": "limit",
          "description": "Maximum number of sessions in the answer",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "query",
          "name": "offset",
          "description": "Offset from the start the number of sessions",
          "required": false,
          "schema": {
            "type": "integer"
          }
        },
        {
          "in": "query",
          "name": "searchName",
          "description": "Name of the session to search",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "in": "query",
          "name": "statusList",
          "description": "Session status to search for. Multiple statuses can be specified, separated by a comma.",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "in": "query",
          "name": "organizationId",
          "description": "Search for sessions belonging to this organization.",
          "required": false,
          "schema": {
            "type": "string"
          }
        },
        {
          "in": "query",
          "name": "visibility",
          "description": "Search for sessions with a specific visibility.",
          "required": false,
          "schema": {
            "type": "string",
            "enum": ["private", "organization", "public"]
          }
        },
        {
          "name": "scheduleOn[before]",
          "in": "query",
          "description": "Filter items scheduled before the specified date.",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "scheduleOn[after]",
          "in": "query",
          "description": "Filter items scheduled after the specified date.",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "endOn[before]",
          "in": "query",
          "description": "Filter items ending before the specified date.",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        },
        {
          "name": "endOn[after]",
          "in": "query",
          "description": "Filter items ending after the specified date.",
          "required": false,
          "schema": {
            "type": "string",
            "format": "date"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "The list of sessions",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SessionPaginationAnswer"
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "tags": ["administration sessions"],
      "summary": "Create a new session",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SessionRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionAnswer"
              }
            }
          }
        }
      }
    }
  },
  "/api/administration/sessions/{id}": {
    "get": {
      "tags": ["administration sessions"],
      "summary": "Get a session by ID",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "name": "id",
          "in": "path",
          "description": "Session ID",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "The session",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionAnswerWithCaptions"
              }
            }
          }
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    },
    "put": {
      "tags": ["administration sessions"],
      "summary": "Update a session and its channels",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "name": "id",
          "in": "path",
          "description": "Session ID",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SessionUpdateRequestWithChannels"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionAnswerWithCaptions"
              }
            }
          }
        }
      }
    },
    "patch": {
      "tags": ["administration sessions"],
      "summary": "Update a session",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "name": "id",
          "in": "path",
          "description": "Session ID",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SessionUpdateRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionAnswerWithCaptions"
              }
            }
          }
        }
      }
    },
    "delete": {
      "tags": ["administration sessions"],
      "summary": "Delete a session by ID",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "name": "id",
          "in": "path",
          "description": "Session ID",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "in": "query",
          "name": "force",
          "description": "Force session stop",
          "required": false,
          "schema": {
            "type": "boolean"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Session successfully deleted"
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/administration/sessions/{id}/stop": {
    "put": {
      "tags": ["administration sessions"],
      "summary": "Stop a session by ID",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "name": "id",
          "in": "path",
          "description": "Session ID",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "in": "query",
          "name": "force",
          "description": "Force session stop",
          "required": false,
          "schema": {
            "type": "boolean"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "The session",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionAnswerWithCaptions"
              }
            }
          }
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        }
      }
    }
  },
  "/api/administration/sessions/{id}/delete-captions": {
    "delete": {
      "tags": ["administration sessions"],
      "summary": "Delete captions of a session by ID",
      "parameters": [
        {
          "in": "query",
          "name": "userScope",
          "schema": {
            "type": "string",
            "enum": ["backoffice"]
          },
          "required": true,
          "description": "Scope of the user, must be 'backoffice'"
        },
        {
          "name": "id",
          "in": "path",
          "description": "Session ID",
          "required": true,
          "schema": {
            "type": "string",
            "format": "uuid"
          }
        },
        {
          "in": "query",
          "name": "start_time",
          "description": "Delete captions from this time",
          "required": false,
          "schema": {
            "type": "string",
            "format": "time",
            "example": "00:00:00",
            "default": null
          }
        },
        {
          "in": "query",
          "name": "end_time",
          "description": "Delete captions to this time",
          "required": false,
          "schema": {
            "type": "string",
            "format": "time",
            "example": "00:05:00",
            "default": null
          }
        }
      ],
      "responses": {
        "200": {
          "description": "The session",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SessionAnswerWithCaptions"
              }
            }
          }
        },
        "404": {
          "$ref": "#/components/responses/NotFound"
        },
        "400": {
          "description": "Bad Request",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Invalid start_time format. Expected HH:mm:ss or null"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
